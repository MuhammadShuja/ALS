<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:context=".ui.fragments.CredentialsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_fragment_credentials_change_mobile_number"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:background="@drawable/bg_form_title"
                    android:gravity="center"/>
                <LinearLayout
                    android:id="@+id/mobile_update_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingTop="4dp"
                        android:hint="@string/user_fragment_credentials_current_mobile_number"
                        android:textColorHint="@color/white_six">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/current_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/current_mobile_number_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_fragment_credentials_current_mobile_number_is_required"
                        android:textColor="@color/error"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingTop="4dp"
                        android:hint="@string/user_fragment_credentials_new_mobile_number"
                        android:textColorHint="@color/white_six">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/new_mobile_number_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_fragment_credentials_new_mobile_number_is_required"
                        android:textColor="@color/error"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <Button
                        android:id="@+id/btn_update_mobile_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/user_fragment_credentials_send_verification_code"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/bg_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mobile_verification_code_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:hint="@string/user_fragment_credentials_verification_code"
                        android:textColorHint="@color/white_six">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile_verification_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/mobile_verification_code_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_fragment_credentials_verification_code_is_required"
                        android:textColor="@color/error"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <Button
                        android:id="@+id/btn_update_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/user_fragment_credentials_change_mobile_number"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/bg_dark"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_fragment_credentials_change_email"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:background="@drawable/bg_form_title"
                    android:gravity="center"/>
            <LinearLayout
                android:id="@+id/email_update_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingTop="4dp"
                        android:hint="@string/user_fragment_credentials_current_email"
                        android:textColorHint="@color/white_six">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/current_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/current_email_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_fragment_credentials_current_email_is_required"
                        android:textColor="@color/error"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingTop="4dp"
                        android:hint="@string/user_fragment_credentials_new_email"
                        android:textColorHint="@color/white_six">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/new_email_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_fragment_credentials_new_email_is_required"
                        android:textColor="@color/error"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <Button
                        android:id="@+id/btn_update_email_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/user_fragment_credentials_send_verification_code"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/bg_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/email_verification_code_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:hint="@string/user_fragment_credentials_verification_code"
                        android:textColorHint="@color/white_six">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_verification_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/email_verification_code_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_fragment_credentials_verification_code_is_required"
                        android:textColor="@color/error"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <Button
                        android:id="@+id/btn_update_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/user_fragment_credentials_change_email"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/bg_dark"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_fragment_credentials_change_password"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:background="@drawable/bg_form_title"
                    android:gravity="center"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingTop="4dp"
                    app:passwordToggleEnabled="true"
                    android:hint="@string/user_fragment_credentials_current_password"
                    android:textColorHint="@color/white_six">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/current_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/current_password_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_fragment_credentials_current_password_is_required"
                    android:textColor="@color/error"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingTop="4dp"
                    app:passwordToggleEnabled="true"
                    android:hint="@string/user_fragment_credentials_new_password"
                    android:textColorHint="@color/white_six">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/new_password_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_fragment_credentials_new_password_is_required"
                    android:textColor="@color/error"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:ignore="SmallSp" />
                <Button
                    android:id="@+id/btn_update_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/user_fragment_credentials_update_password"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/bg_dark"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>